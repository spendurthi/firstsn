<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.firstsn.admin.Department" table="DEPARTMENT">
        <id name="deptId" type="int" column="DEPT_ID">
            <generator class="increment" />
        </id>
        <property name="deptName" type="string" not-null="true" length="30" column="DEPT_NAME" />
        <set name="employees" inverse="true" cascade="save-update">
        	<key column="DEPT_ID" />
        	<one-to-many class="com.firstsn.admin.Employee"/>
        </set>
    </class>
</hibernate-mapping>
